
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>


        body {
            box-sizing: border-box;
            font-family: Lato, Arial;
            text-align: center;
            color: #eee;
            background-color: white;
        }

        h2 {
            margin-top: 1em;
            margin-bottom: 1em;
            color: #5cb85c;
            font-weight: 400;
            text-align: center;
            font-size: 200%;
            letter-spacing: 4px;
        }

        h4 {
            margin-top: 1em;
            color: #eee;
            font-size: 150%;
            font-weight: 300;
            text-align: center;
        }

        button {
            display: inline;
            background: #01A4E0;
            color: #2184AC;
            border: 0;
            padding: 4px;
        }

        input {
            display: block;
            width: 98%;
            height: 30px;
            margin-top: 1.0em;
            padding: 4px;
        }

        .login-box {
            padding: 1em 0 2em 0;
            margin: auto;
            text-align: center;
            display: block;
            background-color: #333;
            /*border: 1px dashed white;*/
            width: 75%;
            height: auto;
        }

        .outer-box {
            display: block;
            margin: auto;
            background: #333;
            border-radius: 5px;
            width: 30%;
            height: 17,5em;
            height: auto;
        }

        #btn-login {
            display: block;
            width: 100%;
            height: 40px;
            margin-top: 2.0em;
            border-radius: 4px;
            background-color: #5cb85c;
            color: #fff;
        }

        #btn-forgot {
            display: block;
            width: 100%;
            margin-top: 1.0em;
            border-radius: 2px;
            color: #fff;
            background-color: #000D36;
        }
    </style>
    <title></title>


</head>
<body>
    <h2>Kayıt Ol</h2>
    <div class="outer-box">
        <div class="login-box">
            <h4 class="login-text">Kayıt</h4>
            <form action="/KayitOl/KayitOl"method="post">
                

                <center>
                    <input name="Adi" placeholder="İsim">
                    <input name="Soyadi" placeholder="Soyisim">
                    <input name="KullaniciAdi" placeholder="Kullanıcı Adı">
                    <input name="Sifre" placeholder="Şifre">
                    <input name="Tc" placeholder="TC kimlik">
                    <input name="Tel" placeholder="Telefon">
                    <input name="Email" placeholder="E mail">
                    <input name="Adres" placeholder="Adres">

                    <button id="btn-login"type="submit">Kayıt Ol</button>

                </center>
            </form>
        </div>
    </div>


</body>
</html>
